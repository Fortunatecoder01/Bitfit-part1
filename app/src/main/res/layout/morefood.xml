<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"/>
    <EditText
        android:id="@+id/etFood" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:inputType="textPersonName"/>

    <TextView android:text="Calories:" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/etCalories" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:inputType="number" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="24dp" android:text="RECORD THIS FOOD"/>
</LinearLayout>

